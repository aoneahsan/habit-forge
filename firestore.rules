rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/hf_users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // User documents
    match /hf_users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Habits collection
    match /hf_habits/{habitId} {
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         resource.data.visibility == 'public' ||
         isAdmin());
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Habit entries
    match /hf_entries/{entryId} {
      allow read, write: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Analytics data
    match /hf_analytics/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Community features
    match /hf_challenges/{challengeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.token.email_verified == true;
      allow update: if isOwner(resource.data.createdBy) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Admin-only collections
    match /hf_settings/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Public content
    match /hf_public/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}